{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
        "appearanceTools": true,
		"color": {
            "defaultPalette": false,
            "custom": true,
            "link": true,
			"palette": [
				{"name": "Kale", "slug": "kale", "color": "#56585d"},
				{"name": "Basil", "slug": "basil", "color": "#578157"},
				{"name": "Celery", "slug": "celery", "color": "#a3b18a"},
				{"name": "Tangerine", "slug": "tangerine", "color": "#d46a43"},
				{"name": "Cocoa", "slug": "cocoa", "color": "#827467"},
				{"name": "Vanilla", "slug": "vanilla", "color": "#dad7cd"},
				{"name": "Dark Chocolate", "slug": "dark-chocolate", "color": "#564f49"},
                {"name": "White", "slug": "white", "color": "#FFFFFF"},
				{"name": "Black", "slug": "black", "color": "#000000"}
			]
		},
        "custom": {
			"spacing": {
				"small": "max(1.25rem, 5vw)",
				"medium": "clamp(2rem, 8vw, calc(4 * var(--wp--style--block-gap)))",
				"large": "clamp(4rem, 10vw, 8rem)",
				"outer": "var(--wp--custom--spacing--small, 1.25rem)"
			},
			"typography": {
				"font-size": {
					"huge": "clamp(2.25rem, 4vw, 2.75rem)",
					"gigantic": "clamp(2.75rem, 6vw, 3.25rem)",
					"colossal": "clamp(3.25rem, 8vw, 6.25rem)"
				},
				"line-height": {
					"tiny": 1.15,
					"small": 1.2,
					"medium": 1.4,
					"normal": 1.6
				}
			}
		},
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Playfair Display, sans-serif",
                    "slug": "coaching-pro-heading-font",
                    "name": "Playfair Display"
                },
                {
                    "fontFamily": "Shadows Into Light, cursive, sans-serif",
                    "slug": "coaching-pro-sub-heading-font",
                    "name": "Shadows Into Light"
                },
                {
                    "fontFamily": "Raleway, sans-serif",
                    "slug": "coaching-pro-body-font",
                    "name": "Raleway"
                }
            ],
            "fontSizes": [
                {
                    "slug": "x-small",
                    "size": "10px",
                    "name": "Extra Small: "
                },
                {
                    "slug": "small",
                    "size": "12",
                    "name": "Small: "
                },
                {
                    "slug": "medium",
                    "size": "16",
                    "name": "Medium: "
                },
                {
                    "slug": "large",
                    "size": "22",
                    "name": "Large: "
                },
                {
                    "slug": "super",
                    "size": "32",
                    "name": "Super: "
                },
                {
                    "slug": "heading-1",
                    "size": "90",
                    "name": "Heading 1: "
                },
                {
                    "slug": "heading-2",
                    "size": "70",
                    "name": "Heading 2: "
                },
                {
                    "slug": "sub-heading",
                    "size": "36",
                    "name": "Sub-heading: "
                }
            ]
        }
	},
    "styles": {
        "color": {
            "text": "#564f49"
        },
        "typography": {
            "fontSize": "30px",
            "lineHeight": "55px"
        },
        "elements": {
            "h1": {
                "color": {
                    "text": "#334e41"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--coaching-pro-heading-font)",
                    "fontSize": "90px",
                    "fontWeight": "700",
                    "lineHeight": "95px"
                }
            }
        }
    }
}
