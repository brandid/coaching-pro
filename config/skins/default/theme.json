{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
        "appearanceTools": true,
		"color": {
            "defaultPalette": false,
            "custom": true,
            "link": true,
			"palette": [
				{"name": "Theme Color 1", "slug": "theme-color-1", "color": "#56585d"},
				{"name": "Theme Color 2", "slug": "theme-color-2", "color": "#d46a43"},
				{"name": "Theme Color 3", "slug": "theme-color-3", "color": "#6e6872"},
				{"name": "Theme Color 4", "slug": "theme-color-4", "color": "#5c4a28"},
				{"name": "Theme Color 5", "slug": "theme-color-5", "color": "#939393"},
				{"name": "Theme Color 6", "slug": "theme-color-6", "color": "#8a8a8a"},
				{"name": "Theme Color 7", "slug": "theme-color-7", "color": "#f0efee"},
                {"name": "Theme Color 8", "slug": "theme-color-8", "color": "#f8f8f8"},
                {"name": "White", "slug": "white", "color": "#FFFFFF"},
				{"name": "Black", "slug": "black", "color": "#000000"},
                {"name": "Soft White", "slug": "soft-white", "color": "#f5f5f5"},
                {"name": "Soft Black", "slug": "soft-black", "color": "#666666"},
                {"name": "Grey", "slug": "grey", "color": "#a5abab"}
			]
		},
        "custom": {
			"spacing": {
				"small": "max(1.25rem, 5vw)",
				"medium": "clamp(2rem, 8vw, calc(4 * var(--wp--style--block-gap)))",
				"large": "clamp(4rem, 10vw, 8rem)",
				"outer": "var(--wp--custom--spacing--small, 1.25rem)"
			},
			"typography": {
				"font-size": {
					"huge": "clamp(2.25rem, 4vw, 2.75rem)",
					"gigantic": "clamp(2.75rem, 6vw, 3.25rem)",
					"colossal": "clamp(3.25rem, 8vw, 6.25rem)"
				},
				"line-height": {
					"tiny": 1.15,
					"small": 1.2,
					"medium": 1.4,
					"normal": 1.6
				}
			}
		},
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "Playfair Display, sans-serif",
                    "slug": "coaching-pro-heading-font",
                    "name": "Playfair Display"
                },
                {
                    "fontFamily": "Shadows Into Light, cursive, sans-serif",
                    "slug": "coaching-pro-sub-heading-font",
                    "name": "Shadows Into Light"
                },
                {
                    "fontFamily": "Raleway, sans-serif",
                    "slug": "coaching-pro-body-font",
                    "name": "Raleway"
                }
            ],
            "fontSizes": [
                {
                    "slug": "x-small",
                    "size": "10px",
                    "name": "Extra Small: "
                },
                {
                    "slug": "small",
                    "size": "12",
                    "name": "Small: "
                },
                {
                    "slug": "medium",
                    "size": "16",
                    "name": "Medium: "
                },
                {
                    "slug": "large",
                    "size": "22",
                    "name": "Large: "
                },
                {
                    "slug": "super",
                    "size": "32",
                    "name": "Super: "
                },
                {
                    "slug": "heading-1",
                    "size": "90",
                    "name": "Heading 1: "
                },
                {
                    "slug": "heading-2",
                    "size": "70",
                    "name": "Heading 2: "
                },
                {
                    "slug": "sub-heading",
                    "size": "36",
                    "name": "Sub-heading: "
                }
            ]
        }
	},
    "styles": {
        "color": {
            "text": "#564f49"
        },
        "typography": {
            "fontSize": "30px",
            "lineHeight": "55px"
        },
        "elements": {
            "h1": {
                "color": {
                    "text": "#334e41"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--coaching-pro-heading-font)",
                    "fontSize": "90px",
                    "fontWeight": "700",
                    "lineHeight": "95px"
                }
            }
        }
    }
}
